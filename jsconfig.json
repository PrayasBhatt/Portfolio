{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    "baseUrl": ".", 
    "paths": {
      "@/*": ["./src/*"] 
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}